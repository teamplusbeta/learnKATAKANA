<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.teamplusbeta.learnhiragana.QuestionActivity"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:weightSum="1"
    android:background="@color/WHITE">

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/WHITE">

        <TextView android:text = ""
            android:textColor="@color/BLACK"
            android:background="@drawable/history_frame1"
            android:id="@+id/history1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text = ""
            android:textColor="@color/BLACK"
            android:background="@drawable/history_frame2"
            android:id="@+id/history2"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text = ""
            android:textColor="@color/BLACK"
            android:background="@drawable/history_frame3"
            android:id="@+id/history3"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text = ""
            android:textColor="@color/BLACK"
            android:background="@drawable/history_frame4"
            android:id="@+id/history4"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text = ""
            android:textColor="@color/BLACK"
            android:background="@drawable/history_frame5"
            android:id="@+id/history5"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView android:text = "ã‚¢"
        android:textColor="@color/BLACK"
        android:background="@color/WHITE"
        android:height="800px"
        android:width="800px"
        android:id="@+id/questionText"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="400sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ic_chevron_left_black_48dp"
            android:clickable="true"
            android:id="@+id/prevButton"
            android:background="#00000000"
            android:layout_marginTop="50dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_hearing_black_48dp"
            android:clickable="true"
            android:id="@+id/hearButton"
            android:background="@drawable/background_circle"
            android:layout_margin="50dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ic_chevron_right_black_48dp"
            android:clickable="true"
            android:id="@+id/nextButton"
            android:background="#00000000"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</LinearLayout>
